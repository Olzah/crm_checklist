<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Inherit CRM Lead Form and add new notebook-->
     <record id="crm_lead_inherit_form" model="ir.ui.view">
            <field name="name">crm.lead.inherit.notebook.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">

                    <page string="CRM Checklist" name="Checklist">
                        <field name="progress" string="progress" widget="percentpie"/>
                        <field name="tasks_list_ids" string="Tasks list">
                            <tree editable="bottom" sample="1" multi_edit="1" create="true" delete="true">
                                <field name="task_list_id" invisible="1"/>
                                <field name="name" />
                                <field name="description" />
                                <field name="state" />
                                <field name="is_done" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
     </record>
</odoo>